@page
@model RazorPizzeria.Pages.PizzaModel
@{
}

<div class="text-center">

    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Pizza Selection.</h1>
        <h4>Choose one, or try our custom builder.</h4>
        <h5>Place order and have it delievered in 2 nanoseconds, or free of charge!</h5>
        <p class="smallText"><i>Only one pizza pr order</i></p>
    </div>

    <div class="container">
        <div class="row">
            
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                   
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100" />
                    </div>

                    <div class="col-8 alig-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza</h3>
                            <p style="text-align:left;">Make your own Pizza with our custom pizza maker!</p>
                            <a class="btn btn-primary" style="float:left;" asp-page="Forms/CustomPizza">Create Custom Pizza!</a>
                        </div>
                    </div>

                </div>
            </div>
            @foreach(var pizza in Model.fakePizzaDB)
                {
                var imagePath = "~/Images/Pizzas/" + pizza.ImageTitle + ".png";

                <div class="col-4 mb-5">
                        <img src="@imagePath" class="w-100" asp-append-version="true" />
                        <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout" asp-route-Imagetitle="@pizza.ImageTitle" asp-route-PizzaName="@pizza.PizzaName" asp-route-PizzaPrice="@pizza.FinalPrice">Get this Pizza!</a>
                        <br />
                    </div>
                }
        </div>
    </div>

</div>